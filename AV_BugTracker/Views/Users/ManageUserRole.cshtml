@using AV_BugTracker.Models;
@model ApplicationUser

@{
	ViewBag.Title = "ManageUserRoles";
}

<h2 class="text-center">Manage User Role</h2>

<div class="row">
	<div class="col text-center h3">
		Managing Role for @Model.FullName
	</div>
</div>
<br />
<br />

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="container">
		<div class="row">
			<div class="col text-center btn-gradient btn-air-primary">
				@Html.DropDownList("RoleName", "-- no role --")
			</div>
		</div>
		<br />
		<br />
		<div class="row">
			<div class="col">
				<button type="submit" class="btn width btn-gradient btn-air-primary">Manage Role</button>
			</div>
		</div>
	</div>
}