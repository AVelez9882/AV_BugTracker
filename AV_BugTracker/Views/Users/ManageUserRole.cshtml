@using AV_BugTracker.Models;
@model ApplicationUser

@{
    ViewBag.Title = "ManageUserRoles";
}

<h2>Manage User Role</h2>

<div class="row">
    <div class="col-3 text-center h2">
        Managing Role for @Model.FullName
    </div>
</div>


@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-3">
            <button type="submit" class="btn btn-primary">Manage Role</button>
        </div>
    </div>
}


<div class="row">
    <div class="col-3">
        @Html.DropDownList("RoleName", "-- no role --")
    </div>
</div>