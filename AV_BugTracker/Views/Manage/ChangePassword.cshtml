@model AV_BugTracker.Models.ExtendedChangeViewModel

@{
	ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	<div class="container">
		<div class="row">
			<div class="col table-responsive btn-gradient card bg-primary btn-air-primary">
				@Html.AntiForgeryToken()
				<h2 class="text-center">Change Name and Password</h2>
				<hr />
				<div class="form-group text-center">
					@Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
					<span class="col">
						@Html.EditorFor(m => m.FirstName, new { @class = "form-control" })
					</span>
				</div>
				<div class="form-group text-center">
					@Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
					<span class="col">
						@Html.EditorFor(m => m.LastName, new { @class = "form-control" })
					</span>
				</div>
				<div class="form-group text-center">
					@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
					<span class="col">
						@Html.EditorFor(m => m.Email, new { @class = "form-control" })
					</span>
				</div>
				@Html.ValidationSummary("", new { @class = "text-danger" })
				<div class="form-group text-center">
					@Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
					<div class="col">
						@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control text-center" })
					</div>
				</div>
				<div class="form-group text-center">
					@Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
					<div class="col">
						@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control text-center" })
					</div>
				</div>
				<div class="form-group text-center">
					@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
					<div class="col">
						@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center" })
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="form-group">
			<div class="col text-center">
				<input type="submit" value="Update" class="btn width btn-gradient btn-air-primary" />
			</div>
		</div>
	</div>
}
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}