@model AV_BugTracker.Models.IndexViewModel
@{
	ViewBag.Title = "Manage";
}

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
	<h2 class="text-center">Change your account settings</h2>
	<hr />
	<div class="container">
		<div class="row">
			<div class="col table-responsive btn-gradient card bg-primary btn-air-primary">
				<dl class="dl-horizontal">
					<dt class="text-center">Name/Email/Password:</dt>
					<dd class="text-center">
						@if (Model.HasPassword)
						{
							<div class="text-center">
								<button class="btn btn-dark width btn-air-primary text"><a href=@Url.Action("ChangePassword", "Manage")>Change Account Settings</a></button>
							</div>
						}
						else
						{
							<div class="text-center">
								<button class="btn btn-dark width btn-air-primary text"><a href=@Url.Action("SetPassword", "Manage")>Set Password</a></button>
							</div>
						}
					</dd>
					<br />
					<br />
					<dt class="text-center">External Logins:</dt>
					<dd class="text-center">
						There are @Model.Logins.Count external logins.
						<div class="text-center">
							<button class="btn btn-dark width btn-air-primary text"><a href=@Url.Action("ManageLogins", "Manage")>Manage Logins</a></button>
						</div>
					</dd>

					@*Phone Numbers can used as a second factor of verification in a two-factor authentication system.

						See
