@model AV_BugTracker.Models.ResetPasswordViewModel
@{
	ViewBag.Title = "Reset password";
}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	<div class="container">
		@Html.ValidationSummary("", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Code)
		<div class="form-group text-center">
			@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
			<div class="col">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center" })
			</div>
		</div>
		<div class="form-group text-center">
			@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
			<div class="col">
				@Html.PasswordFor(m => m.Password, new { @class = "form-control text-center" })
			</div>
		</div>
		<div class="form-group text-center">
			@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
			<div class="col">
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center" })
			</div>
		</div>
		<br />
		<div class="form-group text-center">
			<div class="col text-center">
				<input type="submit" class="btn width btn-gradient btn-air-primary" value="Reset" />
			</div>
		</div>
	</div>
}


<div class="container">
	<div class="row">
		<div class="col text-center">
			<img src="~/Images/logo.png" />
		</div>
	</div>
</div>


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
