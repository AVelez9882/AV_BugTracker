@using AV_BugTracker.Models;
@using AV_BugTracker.Helpers;
@model IEnumerable<ApplicationUser>

@{
	ViewBag.Title = "ManageProjectUsers";
	var projectHelper = new ProjectHelper(); 
}

<h2>Manage Project Users</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="row">
		<div class="col-6">
			<h2>Select Users</h2>
			@Html.ListBox("UserIds")
		</div>
		<div class="col-6">
			<h2>Select Project</h2>
			@Html.ListBox("ProjectIds")
		</div>
	</div>

	<div class="row">
		<div class="col-12">
			<button type="submit">Assign Users</button>
		</div>
	</div>
}

<hr />

<table class="table">
	<tr>
		<th>
			@Html.DisplayName("Users")
		</th>
		<th>
			@Html.DisplayName("Project")
		</th>
	</tr>

	@foreach (var person in Model)
	{
		<tr>
			<td>
				@person.Email
			</td>
			<td>
				@foreach (var project in projectHelper.ListUserProjects(person.Id))
				{
					@project.Name<br />
				}
			</td>
		</tr>
	}

</table>